<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.project.platform.myapp.ConfirmCodeActivity">

    <TextView
        android:id="@+id/text_view_submit_Confirm_Code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Receiving code by email"
        android:textColor="#00b65e"
        android:textSize="35sp" />

    <EditText
        android:id="@+id/edit_text_password_Confirm_Code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CODE"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textColorHint="#4e4e4e"
        android:textSize="26sp" />

    <Button
        android:id="@+id/button_submit_Confirm_Code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="#0c7ded"
        android:textSize="40sp" />
</LinearLayout>